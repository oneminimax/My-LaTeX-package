\newcommand{\inputexercice}[2][]{
  \begin{exercice}[label={exer:#2}]{#1}
    \input{\exerpath/#2.tex}
  \end{exercice}
}

\newcommand{\inputexercicesolution}[2][]{
  \begin{exercice_solution}[label={exer_sol:#2},title={Exercice~\ref{exer:#2} : #1}]
